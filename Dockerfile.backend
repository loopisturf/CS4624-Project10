# Dockerfile.backend

FROM python:3.10-slim

WORKDIR /app

# Install backend dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the backend code
COPY . .

# Copy the built React app (frontend/build) into the backend image
COPY ./front-end/build ./static/react_build  # Ensure the build folder is copied locally

# Command to run the Flask app
CMD ["python", "app.py"]